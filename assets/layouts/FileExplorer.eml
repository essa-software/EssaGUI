@ToolWindow {
    width: 900
    height: 550
    title: "File Explorer"
    center_on_screen: true
    
    main_widget: @Container {
        layout: @VerticalBoxLayout
        
        @Container { // toolbar
            layout: @HorizontalBoxLayout
            width: auto
            height: 32px
            
            @Textbox directory_path
            
            @TextButton parent_directory {
                image: asset("gui/parentDirectory.png")
                width: 32px
            }
            
            @TextButton create_directory {
                image: asset("gui/newFolder.png")
                width: 32px
            }
            
            @Textbox search {
                width: 200px
                placeholder: "Search..."
            }
        }
        
        @Container { // main
            layout: @HorizontalBoxLayout
            
            @Container sidebar {
                layout: @VerticalBoxLayout
                width: 200px
                height: auto
            }
            @TreeView list
        }
        
        @Container { // footer
            layout: @HorizontalBoxLayout {
                padding: 5
                spacing: 5
            }
            
            height: 42px
            
            @Textfield { width: auto }

            @TextButton open {
                width: 100px
                content: "Open"
            }
        }
    }
}
